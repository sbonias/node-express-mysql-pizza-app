<div class="pizza-intro">
  <img src="/assets/images/pizza.png" alt="Pizza" class="pizza" />
  <h2 class="byline" id="byline">Pizza Devourer</h2>
</div>

<div class="ordered">
  <h3>Pizzas Ordered</h3>
  <ul>
    {{#each pizzas}}
    <li>
      <p>ID: {{this.id}}</p>
      <p>Pizza: {{this.pizza}}</p>
      <button type="submit">Devour!</button>
      <button type="submit">Remove!</button>
    </li>
    {{/each}}
  </ul>
</div>

<div class="devoured">
  <h3>Pizzas Devoured</h3>
  <ul>
    {{#each pizzas}}
    <li>
      <p>ID: {{this.id}}</p>
      <p>Pizza: {{this.pizza}}</p>
    </li>
    {{/each}}
  </ul>
</div>

<div class="main">
  <img src="/assets/images/pizza.png" style="width: 400px;height:100px" alt="Pizza" class="pizza2" />
  <h2 class="byline2" id="byline2">Pizza Devourer</h2>
  <form action="burgers/create/" method="POST">
    <div class="form-group">
      <input type="text" name="name">
    </div>
    <button type="submit">Add Pizza</button>
    <br>
    <h3>Enter a pizza you want to eat then click the "Submit" button</h3>
  </form>
</div>

