<div class="pizza-intro">
  <img src="/assets/images/pizza.png" alt="Pizza" class="pizza" />
  <h2 class="byline" id="byline">Pizza Devourer</h2>
</div>

<div class="ordered">
  <h3>Pizzas Ordered</h3>
  <ul>
    {{#each pizzas}}
    <li>
      <p>{{this.pizza_name}}</p>
      <button type="submit">Devour!</button>
    </li>
    {{/each}}
  </ul>
</div>

<div class="devoured">
  <h3>Pizzas Devoured</h3>
  <ul>
    {{#each pizzas}}
    <li>
    </li>
    {{/each}}
  </ul>
</div>

<div class="main">
  <img src="/assets/images/pizza.png" style="width: 300px;height:150px" alt="Pizza" class="pizza2" />
  <h2 class="byline2" id="byline2">Pizza Devourer</h2>
  <form>
    <div class="form-group">
      <input type="text" id="newPizza">
      <button type="submit" class="makePizza">Add Pizza</button>
      <h3>Enter a pizza you want to eat then click the "Submit" button</h3>
    </div>
  </form>
</div>

